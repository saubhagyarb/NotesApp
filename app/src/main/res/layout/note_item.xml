<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:elevation="3dp"
app:cardCornerRadius="10dp"
android:layout_margin="6dp">

<LinearLayout
    android:id="@+id/note_background"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/title"
        android:text="@string/your_notes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/md_theme_scrim_mediumContrast"
        android:textColorLink="@color/md_theme_secondaryContainer"
        android:maxLines="2"
        android:autoLink="all"
        />

    <TextView
        android:id="@+id/content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:layout_marginTop="8dp"
        android:textColor="@color/md_theme_scrim_mediumContrast"
        android:textColorLink="@color/md_theme_secondaryContainer"
        android:maxLines="4"
        android:autoLink="all"
        android:text="@string/the_content_of_the_note"
        />

</LinearLayout>
</androidx.cardview.widget.CardView>